    <menuitem
        id="menu_payment"
        name="Payments"
        action="action_payment"
        parent="g2p_accounting_root"
        sequence="24"
        groups="g2p_registry_base.group_g2p_admin,g2p_programs.g2p_program_manager,g2p_programs.g2p_finance_validator"
    />

</odoo>
