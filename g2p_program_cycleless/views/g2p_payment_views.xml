<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Tree view -->
    <record id="view_payment_tree_inherited" model="ir.ui.view">
        <field name="name">view_payment_tree_inherited</field>
        <field name="model">g2p.payment</field>
        <field name="inherit_id" ref="g2p_programs.view_payment_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='cycle_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
    <!-- Form view -->
    <record id="view_payment_form_inherited" model="ir.ui.view">
        <field name="name">view_payment_form_inherited</field>
        <field name="model">g2p.payment</field>
        <field name="inherit_id" ref="g2p_programs.view_payment_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='cycle_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

</odoo>
