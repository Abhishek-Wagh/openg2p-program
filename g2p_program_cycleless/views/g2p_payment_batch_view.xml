<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Tree view -->
    <record id="view_payment_batch_tree_inherited" model="ir.ui.view">
        <field name="name">view_payment_batch_tree_inherited</field>
        <field name="model">g2p.payment.batch</field>
        <field name="inherit_id" ref="g2p_programs.view_payment_batch_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='cycle_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
    <!-- Form view -->
    <record id="view_payment_batch_form_inherited" model="ir.ui.view">
        <field name="name">view_payment_batch_form_inherited</field>
        <field name="model">g2p.payment.batch</field>
        <field name="inherit_id" ref="g2p_programs.view_payment_batch_form" />
        <field name="arch" type="xml">
            <div class="oe_title mb24" position="attributes">
                <attribute name="invisible">1</attribute>
            </div>
            <xpath expr="//label[@for='cycle_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//div[@class='oe_title mb24']/h1/field[@name='cycle_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>
