<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_program_membership_cycleless_form" model="ir.ui.view">
        <field name="name">view_program_membership_cycleless_form</field>
        <field name="model">g2p.program_membership</field>
        <field name="inherit_id" ref="g2p_programs.view_program_membership_form" />
        <field name="priority">980</field>
        <field name="arch" type="xml">
            <xpath expr="//form/header" position="inside">
                <button
                    name="open_entitlement_form_wizard"
                    type="object"
                    attrs="{'invisible':[('state','!=','enrolled')]}"
                    string="Create Entitlement"
                    class="btn-primary"
                />
            </xpath>
        </field>
    </record>
</odoo>
