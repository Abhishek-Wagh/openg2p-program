<odoo>
    <record id="create_entitlement_wizard_form_view" model="ir.ui.view">
        <field name="name">create_entitlement_wizard_form_view</field>
        <field name="model">g2p.entitlement.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="partner_id" readonly="1" />
                        <field name="program_id" readonly="1" invisible="1" />
                        <field name="initial_amount" string="Amount" />
                        <field name="currency_id" readonly="1" invisible="1" />
                        <field name="valid_from" />
                        <field name="valid_until" />
                    </group>
                </sheet>
                <footer>
                    <button
                        name="create_entitlement"
                        string="Create"
                        class="oe_highlight btn-primary"
                        type="object"
                    />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

</odoo>
