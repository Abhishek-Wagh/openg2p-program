<odoo>
    <record id="view_create_entitlement_wizard_form" model="ir.ui.view">
        <field name="name">view_create_entitlement_wizard_form</field>
        <field name="model">g2p.entitlement.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="partner_id" readonly="1" />
                        <field name="program_id" invisible="1" />
                        <field name="initial_amount" string="Amount" />
                        <field name="currency_id" invisible="1" />
                        <field name="valid_from" />
                        <field name="valid_until" />
                    </group>
                </sheet>
                <footer>
                    <button name="create_entitlement" type="object" string="Create" class="btn-primary" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

</odoo>
